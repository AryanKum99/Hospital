<%- layout('layouts/boilerplate') %>

  <head>
    <title>Medi-Care Login</title>
    <link rel="stylesheet" href="styles/main.css">
    <link rel="stylesheet" href="styles/users.css">
    <link rel="stylesheet" href="styles/registerLogin.css">
  </head>
  <body>
    <div class="loginReg-div">
      <h3 class="regLogin-heading" style="color: #164B60;">Please Login To Access All Functionalities!</h3>
      <form action="/login" method="POST" class="validated-form" novalidate>
        <div class="login">
          <table class="regLogin-table">
            <tr class="trow">
              <td><label class="form-label" for="username">Enter your username:</label></td>
              <td><input class="form-control" type="username" id="username" name="username" required></td>
              <td>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </td>
            </tr>
            <tr class="trow">
              <td><label class="form-label" for="password">Enter your password:</label></td>
              <td><input class="form-control" type="password" id="password" name="password" required></td>
              <td>
                <div class="valid-feedback">
                  <h5>Looks good!</h5>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <div class="login-btn">
          <button class="btn btn-success" id="button">Login</button>
        </div>
      </form>
      <div class="lg-6">
        <form class="reg-form" action="/register" method="get">
          <h4>New User? <button class="btn btn-success" id="button">Sign Up</button>
      </div>
      </h4>
      </form>
    </div>
    <script src="javascripts/validateform.js"></script>
  </body>

  </html>